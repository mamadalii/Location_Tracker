<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:id="@+id/topNav"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:layout_alignParentTop="true"
            android:background="@color/Header_on_map_color"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="00:00:00"
                android:textColor="#009688"
                android:textSize="24dp"
                android:textStyle="bold"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/closeBar"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:background="#D1C4E9">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_my_location_black_24dp"
                android:text=" Inside : "
android:textColor="#FFFF"
                android:textSize="17sp"
               />
<TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="   "
    android:textSize="17sp"/>
            <TextView

                android:id="@+id/tv_closest_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_close_to"
                android:text=" Close to: "
                android:textColor="#FFF"
                android:textSize="17sp" />
<TextView
    android:id="@+id/tv_current_place"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textSize="17sp"/>

        </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|top"
            android:layout_marginTop="120dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fbtNewPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/colorButton"
                android:backgroundTint="@color/colorButton"
                android:elevation="6dp"
                android:src="@drawable/ic_add_black_24dp"
                app:fabSize="auto" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fbtClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="3dp"
                android:backgroundTint="@color/colorButton"
                android:elevation="10dp"
                android:src="@drawable/ic_backspace_black_24dp"
                app:fabSize="auto" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fbtnMylocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="3dp"
                android:backgroundTint="@color/colorButton"
                android:elevation="10dp"
                android:src="@drawable/ic_near_me_black_24dp"
                app:fabSize="auto" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">




                <com.example.utility.SwipeButton
                    android:id="@+id/swipe_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                   >


                </com.example.utility.SwipeButton>



                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_remove_black_24dp"
                    android:padding="5dp"
                    android:text="Reset"
                    android:theme="@style/button_style" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </FrameLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
