<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="60dp"
    android:background="#f498ad"
    android:padding="60dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_layout_text"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp" />


    <EditText
        android:id="@+id/etPolygonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/text" />

    <Button
        android:id="@+id/btnDialogBuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPolygonTitle"
        android:layout_centerHorizontal="true"
        android:text="Build" />

    <Button
        android:id="@+id/btnDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDialogBuild"
        android:layout_centerHorizontal="true"
        android:text="Return To Main Page" />
</RelativeLayout>